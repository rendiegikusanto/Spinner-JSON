<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9100"
    android:gravity=""

    android:padding="16dp"
    android:weightSum="1">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.20">


        <Button
            android:layout_width="132dp"
            android:layout_height="142dp"
            android:layout_marginLeft="10dp"
            android:background="#FF9100"
            android:drawableTop="@drawable/wisata"
            android:paddingTop="20dp"
            android:text="WISATA"
            android:textColor="#fff"
            android:id="@+id/button88" />

        <Button
            android:layout_width="145dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:background="#FF9100"
            android:drawableTop="@drawable/sekolah"
            android:paddingTop="20dp"
            android:text="SEKOLAH"
            android:textColor="#fff"
            android:id="@+id/button5" />

        <Button
            android:layout_width="148dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:background="#FF9100"
            android:drawableTop="@drawable/hotel"
            android:paddingTop="20dp"
            android:text="HOTEL"
            android:textColor="#fff"
            android:id="@+id/button6" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="155dp"
        android:layout_height="445dp"
        android:orientation="vertical"
        android:weightSum="1">
        <Button
            android:layout_width="130dp"
            android:layout_height="137dp"
            android:layout_marginLeft="10dp"
            android:background="#FF9100"
            android:drawableTop="@drawable/makan"
            android:paddingTop="20dp"
            android:text="RUMAH MAKAN"
            android:textColor="#fff"
            android:id="@+id/button8"
            android:layout_weight="0.17" />

        <Button
            android:layout_width="133dp"
            android:layout_height="122dp"
            android:layout_marginLeft="10dp"
            android:background="#FF9100"
            android:drawableTop="@drawable/rumah_sakit"
            android:paddingTop="20dp"
            android:text="RUMAH SAKIT"
            android:textColor="#fff"
            android:id="@+id/button4"
            android:layout_weight="0.64" />

        <Button
            android:layout_width="133dp"
            android:layout_height="136dp"
            android:layout_marginLeft="10dp"
            android:background="#FF9100"
            android:drawableTop="@drawable/pasar"
            android:paddingTop="20dp"
            android:text="PASAR  MALL"
            android:textColor="#fff"
            android:id="@+id/button3"
            android:layout_weight="0.21" />



    </LinearLayout>


</LinearLayout>

